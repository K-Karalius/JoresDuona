@{
    ViewData["Title"] = "Home Page";
}

<h2>Get Business By ID</h2>

<div id="input-container">
    <label for="businessId">Enter Business ID:</label>
    <input type="number" id="businessId" min="1" />
    <button id="getBusinessBtn">Get Business</button>
</div>

<div id="result-container"></div>

<script>
    document.getElementById('getBusinessBtn').addEventListener('click', async function () {
        const businessId = document.getElementById('businessId').value;

        if (!businessId) {
            alert('Please enter a valid Business ID.');
            return;
        }

        try {
            // Make a GET request to the API endpoint
            const response = await fetch(`https://localhost:7192/api/Businesses/${businessId}`, {
                method: 'GET',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                }
            });

            if (response.ok) {
                const data = await response.json();
                document.getElementById('result-container').innerText = JSON.stringify(data, null, 2);
            } else {
                document.getElementById('result-container').innerText = 'Business not found.';
            }
        } catch (error) {
            console.error('Error fetching business:', error);
            document.getElementById('result-container').innerText = 'An error occurred while fetching the business.';
        }
    });
</script>
